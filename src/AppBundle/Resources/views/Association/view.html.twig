<div aria-hidden="true" role="dialog" tabindex="-1" id="associationView{{entity.id}}" class="modal fade bs-modal-lg in" style="display: block; padding-right: 16px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 class="modal-title">{{entity.name}}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span><b>Categorie</b> : {%if entity.category%}{{entity.category.name}}{%endif%}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Adresse</b> : {{entity.address}}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Ville</b> : {%if entity.category%}{{entity.city.name}}{%endif%}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Email</b> : {{entity.email}}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Téléphone</b> : {{entity.phone}}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Description</b> : {{entity.description}}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Les horaires d'ouverture</b> : <br>
                                {{entity.timing}}
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <span><b>Modération</b> : <br>
                                    {%if entity.moderate == 'accepted'%}Accepté{%elseif entity.moderate == 'refuse'%}Refusé{%else%}En attente{%endif%}
                                    <br>
                                    {%if entity.moderate == 'wait'%}
                                        <a href="{{ path('app_association_moderate', {id: entity.id}) }}" class="btn btn-success btn-sm updateModerateAssociation" type="button" data-type="accepted">Accepter</a>
                                        <a href="{{ path('app_association_moderate', {id: entity.id}) }}" class="btn btn-danger btn-sm updateModerateAssociation" type="button" data-type="refuse">Refuser</a>
                                    {%endif%}
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span><b>Super-admin</b> : {%if entity.suAdmin%}{{entity.suAdmin.email}}{%endif%}</span>
                        </div>
                        <div class="form-group">
                            <span><b>Créé le</b> {%if entity.createAt%}{{entity.createAt|date("d/m/Y H:i")}}{%endif%} <b>par</b> {%if entity.createBy%}{{entity.createBy.lastname}} {{entity.createBy.firstname}}{%endif%}</span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                {%if entity.enabled%}
                    <a href="{{ path('app_association_activate', {id: entity.id}) }}" class="btn btn-success btn-outline activateAssociation" type="button" title="Désactiver signfie que l'association ne sera plus publié sur l'application. Vous pourrez le réactiver si besoin"><i class=" fa fa-lock"></i> Désactiver</a>
                {%else%}
                    <a href="{{ path('app_association_activate', {id: entity.id}) }}" class="btn btn-success btn-outline activateAssociation" type="button" title="Activer signfie que l'association sera plus publié sur l'application"><i class=" fa fa-lock"></i> Activer</a>
                {%endif%}
                <a href="{{ path('app_association_update', {id: entity.id}) }}" class="btn btn-success btn-outline" type="button"> <i class=" fa fa-pencil-square"> Modifier l'association</i></a>
                <button data-dismiss="modal" class="btn dark btn-outline" type="button">Fermer</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>