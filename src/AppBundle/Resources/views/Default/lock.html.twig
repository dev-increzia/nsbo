{% extends 'AppBundle::layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/app/css/lock-2.css') }}">
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/plugins/backstretch/jquery.backstretch.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/lock-2.js') }}" type="text/javascript"></script>
{% endblock %}
{% block bodycontent %}
    <div class="page-lock" id="lock" data-bg1="{{ asset('bundles/app/images/bg/1.jpg') }}" data-bg2="{{ asset('bundles/app/images/bg/2.jpg') }}" data-bg3="{{ asset('bundles/app/images/bg/3.jpg') }}" data-bg4="{{ asset('bundles/app/images/bg/4.jpg') }}">
        <div class="page-body">
            <div class="page-lock-info">
                <h1>{{app.user.lastname}} {{app.user.firstname}}</h1>
                <span class="email"> {{app.user.email}} </span>
                <span class="locked"> Verouill√© </span>
                <form class="form-inline" method="POST" action="">
                    <div class="input-group input-medium">
                        <input type="password" class="form-control" name="password"placeholder="Mot de passe">
                        <span class="input-group-btn">
                            <button type="submit" class="btn green icn-only">
                                <i class="m-icon-swapright m-icon-white"></i>
                            </button>
                        </span>
                    </div>
                    <!-- /input-group -->
                    <div class="relogin">
                        <a href="{{ path('fos_user_security_login') }}"> Pas {{app.user.lastname}} {{app.user.firstname}} ? </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}