{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des commentaires</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des commentaires</h3>
{% endblock %}
{% block maincontent %}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Filtre</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'comments_filter'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-4 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.type, "Type de commentaire", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.type) }}
                            </div>
                        </div>
                        <div class="col-sm-4 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.role, "Role de l'auteur", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.role, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                        </div>
                        <div class="col-sm-4 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.search, "Recherche", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.search, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.search) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group" >
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group" id="event">
                                {{ form_label(form.event, "Evénement", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.event, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.event) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0" id="article">
                            <div class="form-group">
                                {{ form_label(form.article, "Article", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.article, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.article) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.association, "Association", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.association, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.association) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.merchant, "Commerçant", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.merchant, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.merchant) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div id="comments" class="mt-comments" data-page="0" data-break="0" data-loading="0"></div>




{% endblock %}
