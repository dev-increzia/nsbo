{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <a href="{{ path('app_city') }}">Liste des villes</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Modifier ville</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Modifier ville</h3>
{% endblock %}



{% block maincontent %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Informations générales</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        {{ form_label(form.name, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.zipcode, "Code postal", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.zipcode) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.address, "Adresse", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.address, {'attr': {'class': 'form-control changeForMap'}}) }}
                        {{ form_errors(form.address) }}
                        <input id="submitAdresse" type="button" value="Vérifier" class="btn btn-success btn-lg">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Localisation</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <div id="map" data-latitude="{{entity.latitude}}" data-longitude="{{entity.longitude}}" data-draggable="true"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.latitude, "Latitude", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.latitude, {'attr': {'class': 'form-control latitude','readonly': 'true' }}) }}
                                {{ form_errors(form.latitude) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.longitude, "Longitude", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.longitude, {'attr': {'class': 'form-control longitude','readonly': 'true' }}) }}
                                {{ form_errors(form.longitude) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group align-center">
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-lg'}, 'label': 'Valider'}) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
