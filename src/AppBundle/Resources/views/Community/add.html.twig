{% extends 'AppBundle:Community:update.html.twig' %}
{% block breadcrumb %}
    <li>
        <a href="{{ path('app_community') }}">Liste des communautés</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Ajouter Communauté</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Ajouter Communauté</h3>
{% endblock %}
{% block cityhalladmin %}
    <div class="form-group">
        {{ form_widget(form.suAdmin.civility, {'attr': {'class': ''}}) }}
        {{ form_errors(form.suAdmin.civility) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.username, "Nom d'utilisateur", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.suAdmin.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.suAdmin.username) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.lastname, "Nom", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.suAdmin.lastname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.suAdmin.lastname) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.firstname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.suAdmin.firstname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.suAdmin.firstname) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.email, "Email", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.suAdmin.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.suAdmin.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.phone, "Téléphone", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.suAdmin.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.suAdmin.phone) }}
    </div>
    <div class="form-group">
        {{ form_label(form.suAdmin.city, "Ville", {'label_attr': {'class': 'control-label'}}) }}
        {% set city = "" %}
        {% if form.vars.value.suAdmin.city != null %}
            {% set city = form.vars.value.suAdmin.city.name ~ ' ('~form.vars.value.suAdmin.city.zipcode~')' %}
        {% endif %}
        <input type="Text" id="CityAutoCompleteSuAdminInput" class="form-control" placeholder="Choisirz une ville" value="{{ city }}" required>
        {% set cityId = "" %}
        {% if form.vars.value.suAdmin.city != null %}
            {% set cityId = form.vars.value.suAdmin.city.id %}
        {% endif %}
        {{ form_widget(form.suAdmin.city, {'attr': {'class': 'form-control','value':cityId,'style':'display:none;'}}) }}
        {{ form_errors(form.suAdmin.city) }}
    </div>
{% endblock %}