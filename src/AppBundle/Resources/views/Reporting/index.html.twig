{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des signalements</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des signalements</h3>
{% endblock %}
{% block maincontent %}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Filtre</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'reportings_filter'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.dateBefore, "Date (>=)", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateBefore, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateBefore) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.dateAfter, "et (<=)", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateAfter, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateAfter) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.title, "Titre", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.category, "Categorie", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.category) }}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group padding-right-0 margin-right-0">
                                {{ form_label(form.moderate, "Statut", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.moderate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.moderate) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="reportingsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="no-sort">Image</th>
                        <th>Titre</th>
                        <th>Categorie</th>
                        <th>Adresse de signalement</th>
                        <th>Description</th>
                        <th>Nom de l'auteur</th>
                        <th>Date de création</th>
                        <th class="no-sort">Date de mise à jour</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
