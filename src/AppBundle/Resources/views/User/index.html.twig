{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des comptes - Individus</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des comptes - Individus</h3>
{% endblock %}
{% block maincontent %}
    <div class="row">
        <div class="col-sm-12">
            <a id="exportData" href="{{ path('app_user_export') }}" class="pull-right"><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-upload"></i> Exporter les utilisateurs </button></a>
        </div>
    </div>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Filtre</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'users_filter'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.firstname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.enabled, "Statut", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.enabled) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.role, "Rôle", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6  col-sm-offset-6 padding-right-0 margin-right-0 hide" id="association">
                            <div class="form-group">
                                {{ form_label(form.association, "Association", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.association, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.association) }}
                            </div>
                        </div>
                        <div class="col-sm-6 col-sm-offset-6 padding-right-0 margin-right-0 hide" id="merchant">
                            <div class="form-group">
                                {{ form_label(form.merchant, "Commerçant", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.merchant, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.merchant) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="usersTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Etat Liaison</th>
                        <th class="no-sort">Role</th>
                        <th>Statut</th>
                        <th>Date de création</th>
                        <th class="no-sort">Date de mise à jour</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
