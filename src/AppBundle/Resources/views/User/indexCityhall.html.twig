{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des comptes - Administrateurs de communauté</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des Administrateurs de communauté</h3>
{% endblock %}
{% block maincontent %}
    <div class="row">
        <div class="col-sm-6">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_user_suadmin_add') }}" ><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Créer un compte Super Administrateur</button></a>
            {% endif %}
        </div>
        <div class="col-sm-6">
            <a href="{{ path('app_user_cityhall_add') }}" class="pull-right"><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Créer un compte Administrateur</button></a>
        </div>
        <div class="col-sm-6">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_add_suadmin_community') }}" ><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Ajouter un compte Super Administrateur</button></a>
            {% endif %}
        </div>
        <div class="col-sm-6">
            <a href="{{ path('app_add_admin_community_access') }}" class="pull-right"><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Attribuer des droits à un compte existant</button></a>
        </div>
    </div>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Filtre</div>
            <div class="tools">
                <a class="collapse" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'usersCityhall_filter'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.firstname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.enabled, "Statut", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.enabled) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="usersCityhallTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>

                        <th>Statut</th>
                        <th>Super-admin</th>
                        <th>Date de création</th>
                        <th class="no-sort">Date de mise à jour</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
