{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des rubriques des articles importants</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des rubriques des articles importants</h3>
{% endblock %}
{% block maincontent %}

    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Filtre</div>
            <div class="tools">
                <a class="collapse" href="javascript:" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'articleHeading_filter'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.dateBefore, "Date (>=)", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateBefore, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateBefore) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.dateAfter, "et (<=)", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateAfter, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateAfter) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">

                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.enabled, "Etat", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.enabled) }}
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>


            </div>
            <div class="form-group">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    {% if community %}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Gestion Commentaire</div>
            <div class="tools">
                <a class="collapse" href="javascript:" data-original-title="" title=""> </a>
            </div>
        </div>

        <div class="portlet-body" style="display: block;">
            <div class="form-group">
                <label for="is_comment_avtive" class="control-label">Activer les commentaires:</label>
                <select class="form-control" id="is_comment_active">

                    <option value="1" {% if is_comment_active == true %} selected="selected"{% endif %}>Activé</option>
                    <option value="0" {% if is_comment_active == false %} selected="selected"{% endif %}>Désactivé</option>
                </select>
            </div>

        </div>
    </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-12">
            <a href="{{ path('app_articleheading_add') }}" class="pull-right">
                <button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Créer
                    une Rubrique
                </button>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="articleHeadingTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Statut</th>
                    <th>Administrateurs</th>
                    <th>Commentaire</th>
                    <th>Date de création</th>
                    <th class="no-sort">Date de mise à jour</th>
                    <th class="no-sort">Actions</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
