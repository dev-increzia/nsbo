{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des sondages</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des sondages</h3>
{% endblock %}
{% block maincontent %}
    <div class="row">
        <div class="col-sm-12">
            {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('app_survey_add') }}" class="pull-right"><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Créer un sondage</button></a>{% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table id="surveysTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Question</th>
                        <th class="no-sort">Date de création</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
