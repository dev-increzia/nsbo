{% extends 'AppBundle::layout.html.twig' %}
{% block breadcrumb %}
    <li>
        <span>Liste des bons plans</span>
    </li>
{% endblock %}
{% block pagetitle %}
    <h3 class="page-title"> Liste des bons plans</h3>
{% endblock %}
{% block maincontent %}
    <div class="row">
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-sm-12">
            <a href="{{ path('app_goodplan_add') }}" class="pull-right"><button class="btn btn-primary margin-bot-20 btn-success" type="button"><i class="fa fa-plus"></i> Créer un bon plan</button></a>
        </div>
        {% endif %}
    </div>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">Vos critères de recherche</div>
            <div class="tools">
                <a class="expand" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body" style="display: none;">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form, {'attr': {'id': 'good_plan_filter'}}) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.title, "Rechercher", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.enabled, "Etat", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.enabled) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.moderate, "Modération", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.moderate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.moderate) }}
                            </div>
                        </div>
                        <div class="col-sm-2 padding-right-0 margin-right-0 padding-top-40">
                            <div class="form-group">
                                {{ form_widget(form.wait, {'attr': {'class': 'form-control'}}) }} Que les "en attente"
                                {{ form_errors(form.wait) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.dateBefore, "Date de publication du", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateBefore, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateBefore) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.dateAfter, "au", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateAfter, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.dateAfter) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6 padding-none margin-none">
                            <div class="form-group">
                                {{ form_label(form.startAt, "Date du bon plan du", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.startAt, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.startAt) }}
                            </div>
                        </div>
                        <div class="col-sm-6 padding-right-0 margin-right-0">
                            <div class="form-group">
                                {{ form_label(form.endAt, "au", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.endAt, {'attr': {'class': 'form-control datepicker'}}) }}
                                {{ form_errors(form.endAt) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>


    <div id="goodPlans" class="row" data-page="0" data-break="0" data-loading="0"></div>
{% endblock %}
